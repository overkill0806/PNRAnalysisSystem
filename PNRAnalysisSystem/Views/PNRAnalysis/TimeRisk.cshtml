<script>
    $(document).ready(function () {
        var controls = {
            leftArrow: '<i class="fal fa-angle-left" style="font-size: 1.25rem"></i>',
            rightArrow: '<i class="fal fa-angle-right" style="font-size: 1.25rem"></i>'
        }
        $('input[name=datePicker]').datepicker({
            orientation: "bottom right",
            todayHighlight: true,
            templates: controls,
            format: "yyyy/mm/dd"
        });
    });
    function process() {
        var flightno = $('[name=flightno]').val();
        LoadTable('TimeRisk_List', 'PNRAnalysis/ListTimeRisk?flightno=' + flightno);
    }
    function goback() {
        $('#TimeRisk_List').show();
        $('#ListTimeRiskDt').show();
        $('#TimeRiskmain').show();
        $('#btnNewBatch').show();
        $('#TimeRiskView').hide();
        $('#btnGoBack').hide();
    }
</script>