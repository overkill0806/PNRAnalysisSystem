<script>       
    function filterGlobal() {
         $('#example')
             .DataTable()
             .search($('#global_filter').val(), $('#global_regex').prop('checked'), $('#global_smart').prop('checked'))
             .draw();
        }

    $(document).ready(function () {
        $('#example').DataTable({
            "searching": true,
            "paging": true, 
            "info": false,         
            "lengthChange":true ,
            fixedHeader: {
                header: true,
                footer: true
            },
            responsive: {
                details: {
                    renderer: function (api, rowIdx, columns) {

                        var data = '<table style="width:100%">'+
                                     '<thead>' +
                                         '<tr>' +
                                             '<th>Start date</th>'+
                                             '<th>Salary</th>'+
                                         '</tr>' +
                                     '</thead>'+
                                     '<tbody>'+
                                      $.map(columns, function (col, i) {
                                            var input = col.data.split('|');
                                            var str= '<tr data-dt-row="' + col.rowIndex + '" data-dt-column="' + col.columnIndex + '">' ;
                                            str ='';
                                            for (var i = 0; i < input.length;i++)
                                            {
                                                var input2 =input[i].split(',');

                                                str  += '<tr>';
                                                for(var j = 0; j < input2.length;j++)
                                                {
                                                    str +='<td>' + input2[j] + '</td>';
                                                }
                                                str += '</tr>';
                                            }
                                          return col.hidden ?
                                               str +
                                              '' :
                                              '';
                                      }).join('') +     
                                     '</tbody>' +
                                    '</table>';

                        return data ?
                            $('<table/>').append(data) :
                            false;
                    }
                }
            },
            columnDefs: [{
                className: 'control',
                orderable: false,
                targets: 0
            }],
            order: [1, 'asc']
         });
    });


