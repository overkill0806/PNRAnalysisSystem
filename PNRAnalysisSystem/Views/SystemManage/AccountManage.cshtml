    </table>
    </div>
</div>
<script>
    function filterGlobal() {
        $('#AccountListDt')
            .DataTable()
            .search($('#global_filter').val(), $('#global_regex').prop('checked'), $('#global_smart').prop('checked'))
            .draw();
    }
    function filterGlobalClear() {
        $('#AccountListDt')
            .DataTable()
            .search($('#global_filter').val(''), $('#global_regex').prop('checked'), $('#global_smart').prop('checked'))
            .draw();
    }
    $(document).ready(function () {
        $('#AccountListDt').DataTable({
            "searching": true,
            "paging": true,
            "info": false,
            "lengthChange": false,
            fixedHeader: {
                header: true,
                footer: true
            }
        });
    });
</script>